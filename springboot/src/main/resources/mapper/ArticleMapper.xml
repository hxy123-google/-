<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ArticleMapper">

    <sql id="Base_Column_List">
        id,name,content,type,file,recommend,author,time
    </sql>

    <select id="selectAll" resultType="com.example.entity.Article">
        select
        *
        from Article
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="name != null"> and name like concat('%', #{name}, '%')</if>
            <if test="type != null"> and type =#{type}</if>
            <if test="startdate!=null">  and time>= #{startdate}</if>
            <if test="enddate!=null">    and #{enddate} >= time </if>
            <if test="recommend!=null">    and #{recommend} = recommend </if>
            <if test="category!=null">    and #{category} = category </if>
            <if test="author != null"> and author like concat('%', #{author}, '%')</if>
            <if test="journal!= null and journal!=''"> and journal = #{journal}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Article">
        select
            *
        from Article
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from Article
        where  id = #{id}
    </delete>

