{"ast":null,"code":"import E from 'wangeditor';\nexport default {\n  data() {\n    let articleId = this.$route.query.id;\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      articleId: articleId,\n      articleData: {},\n      commentCount: 0,\n      commentContent: '',\n      commentList: []\n    };\n  },\n  mounted() {\n    this.loadArticle();\n    this.loadComment();\n  },\n  // methods：本页面所有的点击事件或者其他函数定义区\n  methods: {\n    loadArticle() {\n      this.$request.get('/article/selectById/' + this.articleId).then(res => {\n        if (res.code === '200') {\n          console.log(res.data);\n          var dateTimeString = res.data.time;\n          var dateTime = new Date(dateTimeString);\n          var year = dateTime.getFullYear();\n          var month = dateTime.getMonth() + 1; // 注意：月份从 0 开始，所以要加 1\n          var day = dateTime.getDate();\n          res.data.time = year + '-' + (month < 10 ? '0' : '') + month + '-' + (day < 10 ? '0' : '') + day;\n          this.articleData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    addReplay(item) {\n      this.$request.post('/comment/add', {\n        pid: item.id,\n        rootId: item.rootId,\n        content: item.replyContent,\n        fid: this.articleId,\n        module: '文献'\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success('操作成功');\n          item.replyContent = '';\n          this.loadComment(); // 重新加载数据\n        }\n      });\n    },\n\n    loadComment() {\n      this.$request.get('/comment/selectForUser', {\n        params: {\n          fid: this.articleId,\n          module: '文献'\n        }\n      }).then(res => {\n        console.log(res);\n        this.commentList = res.data || [];\n      });\n      this.$request.get('/comment/selectCount', {\n        params: {\n          fid: this.articleId,\n          module: '文献'\n        }\n      }).then(res => {\n        console.log(res);\n        this.commentCount = res.data || 0;\n      });\n    },\n    addComment() {\n      alert(this.user.role);\n      this.$request.post('/comment/add', {\n        content: this.commentContent,\n        userId: this.user.id,\n        fid: this.articleId,\n        module: '文献',\n        role: this.user.role\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success('操作成功');\n          this.commentContent = '';\n          this.loadComment(); // 重新加载数据\n        }\n      });\n    }\n  }\n};","map":{"version":3,"names":["E","data","articleId","$route","query","id","user","JSON","parse","localStorage","getItem","articleData","commentCount","commentContent","commentList","mounted","loadArticle","loadComment","methods","$request","get","then","res","code","console","log","dateTimeString","time","dateTime","Date","year","getFullYear","month","getMonth","day","getDate","$message","error","msg","addReplay","item","post","pid","rootId","content","replyContent","fid","module","success","params","addComment","alert","role","userId"],"sources":["src/views/front/ArticleDetail.vue"],"sourcesContent":["<template>\r\n    <div class=\"main-content\">\r\n        <div style=\"width: 70%; margin: 30px auto; min-height: 1000px\">\r\n            <div style=\"text-align: center\">\r\n                <el-button type=\"success\">{{ articleData.type === 'CHINESE' ? '中文文献' : '英文文献' }}</el-button>\r\n                <span style=\"font-size: 20px; font-weight: 550; color: #333333; margin-left: 20px\">{{ articleData.name\r\n                    }}</span>\r\n            </div>\r\n            <div style=\"text-align: center; margin-top: 15px\">\r\n                <span style=\"color: red\" v-if=\"articleData.price > 0\">￥ {{ articleData.price }} / 元</span>\r\n                <span style=\"color: red\" v-else>免费</span>\r\n                <span style=\"color: #509a4d; margin-left: 20px\" v-if=\"articleData.discount < 1\">{{ articleData.discount\r\n                    * 10 }} 折</span>\r\n                <span style=\"color: #666666; margin-left: 50px\">发布时间：{{ articleData.time }}</span>\r\n            </div>\r\n            <!--   课程保密区域   -->\r\n            <div>\r\n                <div style=\"font-size: 18px; margin: 10px 0\">文献资料</div>\r\n                <div v-if=\"articleData.price === 0\">\r\n                    <div style=\"margin-top: 10px\">文献链接：<a :href=\"articleData.file\" target=\"_blank\">{{ articleData.file\r\n                            }}</a></div>\r\n                </div>\r\n                <div v-else>\r\n                    <span style=\"color: red; margin-right: 20px\">该文献属于付费文献，购买后可解锁</span>\r\n                    <el-button type=\"warning\" size=\"mini\">购买文献</el-button>\r\n                </div>\r\n            </div>\r\n            <!--   课程介绍区域   -->\r\n            <div style=\"margin-top: 20px\">\r\n                <div style=\"font-size: 18px\">文献介绍</div>\r\n                <div style=\"margin-top: 10px\" v-html=\"articleData.content\"></div>\r\n            </div>\r\n\r\n\r\n            <!--  评论开始  -->\r\n            <div class=\"card\">\r\n                <h2 style=\"margin-top: 90px\">评论 {{ commentCount }}</h2>\r\n\r\n                <div style=\"margin-bottom: 20px\">\r\n                    <el-input type=\"textarea\" placeholder=\"请输入评论内容\" v-model=\"commentContent\"></el-input>\r\n                    <div style=\"text-align: right; margin-top: 5px\">\r\n                        <el-button type=\"primary\" @click=\"addComment\">评 论</el-button>\r\n                    </div>\r\n                </div>\r\n\r\n                <div>\r\n                    <div style=\"display: flex; grid-gap: 20px; margin-bottom: 20px\" v-for=\"item in commentList\"\r\n                        :key=\"item.id\">\r\n                        <img :src=\"item.avatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\r\n                        <div style=\"flex: 1\">\r\n                            <!-- 这是第一级评论 -->\r\n                            <div style=\"margin-bottom: 10px\">\r\n                                <div style=\"color: #666; margin-bottom: 10px\">{{ item.userName }}</div>\r\n                                <div style=\"color: #444; margin-bottom: 10px\">{{ item.content }}</div>\r\n                                <div style=\"color: #888; font-size: 13px\">\r\n                                    <span style=\"margin-right: 20px\">{{ item.time }}</span>\r\n                                    <span style=\"cursor: pointer\"><i class=\"el-icon-s-comment\"></i>评论</span>\r\n                                </div>\r\n                                <div>\r\n                                    <el-input type=\"textarea\" placeholder=\"请输入回复内容\"\r\n                                        v-model=\"sub.replyContent\"></el-input>\r\n                                    <div style=\"text-align: right; margin-top: 5px\">\r\n                                        <el-button type=\"primary\" @click=\"addReplay(sub)\">回 复</el-button>\r\n                                    </div>\r\n                                </div>\r\n                            </div>\r\n\r\n                            <!-- 这是回复 -->\r\n                            <div style=\"display: flex;  grid-gap: 20px; margin-bottom: 20px\"\r\n                                v-for=\"sub in item.children\" :key=\"item.id\">\r\n                                <img :src=\"sub.avatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\r\n                                <div style=\"flex: 1\">\r\n                                    <div style=\"color: #666; margin-bottom: 10px\">{{ sub.userName }} <span\r\n                                            style=\"color: #333\" v-if=\"sub.replyUser !== item.userName\">回复 {{\r\n                                                sub.replyUser }}</span></div>\r\n                                    <div style=\"color: #444; margin-bottom: 10px\">{{ sub.content }}</div>\r\n                                    <div style=\"color: #888; font-size: 13px\"><span style=\"margin-right: 20px\">{{\r\n                                        sub.time }}</span>\r\n                                        <span style=\"cursor: pointer\"><i class=\"el-icon-s-comment\"></i>评论</span>\r\n                                    </div>\r\n                                </div>\r\n                            </div>\r\n                        </div>\r\n                    </div>\r\n                </div>\r\n            </div>\r\n            <!--  评论结束  -->\r\n        </div>\r\n    </div>\r\n</template>\r\n<script>\r\nimport E from 'wangeditor'\r\nexport default {\r\n\r\n    data() {\r\n        let articleId = this.$route.query.id\r\n        return {\r\n            user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\r\n            articleId: articleId,\r\n            articleData: {},\r\n            commentCount: 0,\r\n            commentContent: '',\r\n            commentList: [],\r\n\r\n        }\r\n    },\r\n    mounted() {\r\n        this.loadArticle();\r\n\r\n        this.loadComment();\r\n\r\n    },\r\n    // methods：本页面所有的点击事件或者其他函数定义区\r\n    methods: {\r\n        loadArticle() {\r\n            this.$request.get('/article/selectById/' + this.articleId).then(res => {\r\n                if (res.code === '200') {\r\n                    console.log(res.data);\r\n                    var dateTimeString = res.data.time;\r\n                    var dateTime = new Date(dateTimeString);\r\n                    var year = dateTime.getFullYear();\r\n                    var month = dateTime.getMonth() + 1; // 注意：月份从 0 开始，所以要加 1\r\n                    var day = dateTime.getDate();\r\n                    res.data.time = year + '-' + (month < 10 ? '0' : '') + month + '-' + (day < 10 ? '0' : '') + day;\r\n                    this.articleData = res.data\r\n                } else {\r\n                    this.$message.error(res.msg)\r\n                }\r\n            });\r\n        },\r\n        addReplay(item) {\r\n            this.$request.post('/comment/add', { pid: item.id, rootId: item.rootId, content: item.replyContent, fid: this.articleId, module: '文献' }).then(res => {\r\n                if (res.code === '200') {\r\n                    this.$message.success('操作成功')\r\n                    item.replyContent = ''\r\n                    this.loadComment()  // 重新加载数据\r\n                }\r\n            })\r\n        },\r\n        loadComment() {\r\n            this.$request.get('/comment/selectForUser', {\r\n                params: { fid: this.articleId, module: '文献' }\r\n            }).then(res => {\r\n                console.log(res);\r\n                this.commentList = res.data || []\r\n            });\r\n            this.$request.get('/comment/selectCount', {\r\n                params: { fid: this.articleId, module: '文献' }\r\n            }).then(res => {\r\n                console.log(res);\r\n                this.commentCount = res.data || 0;\r\n\r\n            })\r\n        },\r\n        addComment() {\r\n            alert(this.user.role);\r\n            this.$request.post('/comment/add', { content: this.commentContent, userId: this.user.id, fid: this.articleId, module: '文献', role: this.user.role }).then(res => {\r\n                if (res.code === '200') {\r\n                    this.$message.success('操作成功')\r\n                    this.commentContent = ''\r\n                    this.loadComment()  // 重新加载数据\r\n                }\r\n            })\r\n        },\r\n    }\r\n}\r\n</script>"],"mappings":"AA2FA,OAAAA,CAAA;AACA;EAEAC,KAAA;IACA,IAAAC,SAAA,QAAAC,MAAA,CAAAC,KAAA,CAAAC,EAAA;IACA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAR,SAAA,EAAAA,SAAA;MACAS,WAAA;MACAC,YAAA;MACAC,cAAA;MACAC,WAAA;IAEA;EACA;EACAC,QAAA;IACA,KAAAC,WAAA;IAEA,KAAAC,WAAA;EAEA;EACA;EACAC,OAAA;IACAF,YAAA;MACA,KAAAG,QAAA,CAAAC,GAAA,+BAAAlB,SAAA,EAAAmB,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACAC,OAAA,CAAAC,GAAA,CAAAH,GAAA,CAAArB,IA